{
  "hosting": {
    "target": "sliptchatbot",
    "public": "public",  
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/bot/**",
        "function": "telegramBot"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": ["npm run build --prefix frontend"]
  },
  "functions": {
    "source": "bot"
  }
 

    
}